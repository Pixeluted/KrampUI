{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "krampui-rewrite"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "open": true,
        "scope": [{ "name": "cmd", "cmd": "cmd", "args": true }]
      },
      "fs": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "KrampUI",
        "minWidth": 400,
        "minHeight": 200,
        "width": 700,
        "height": 400,
        "resizable": true,
        "maximizable": true,
        "center": true,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "KrampUI-Rewrite",
      "icon": ["icons/icon.ico"]
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
